{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login-container">
  <div class="row">
    <div class="col-2">
      <img src="{{asset("assets/images/icones/icon.jpg")}}" width="80%" alt="fork">
    </div>
    <div class="col-10">
      <h3>Connexion à votre espace abonné</h3>
    </div>
  </div>
  <hr>
  <form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
      Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}
    <div class="form-field">
      <label for="inputEmail"><i>Email</i></label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    <div class="form-field">
      <label for="inputPassword">Mot de passe</label>
      <input type="password" name="password" id="inputPassword" class="form-control" required>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>
    <div class="form-field">
      <button class="btn btn-lg btn-dark form-control" type="submit">Connexion</button>
    </div>
  </form>
  <a class="link" href="{{path('app_forgot_password_request')}}">Mot de passe oublié</a>
</div>
{% endblock %}
